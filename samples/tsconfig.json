{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "isolatedModules": true,

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "outDir": "build",
    "sourceMap": true,
    "noEmit": true,
    "declaration": true,
  }  
}
